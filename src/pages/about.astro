---
import Layout from '../layouts/BlogPost.astro';
import AboutContent from '../content/about.md';
const aboutMeta = (AboutContent as any).frontmatter || {};
const pageTitle = aboutMeta.title || 'About';
const pageDescription = aboutMeta.description || 'Modern web insights and tools for full-stack developers.';
---

<Layout
	title={pageTitle}
	description={pageDescription}
>
	<div class="about-container">
		<AboutContent />
	</div>

	<style>
		.about-container {
			max-width: 760px;
			margin: 0 auto;
		}
		.about-container :global(h2) {
			margin-top: 2rem;
			margin-bottom: 1rem;
		}
		.about-container :global(h3) {
			margin-top: 1.5rem;
			margin-bottom: 0.75rem;
		}
		.about-container :global(ul) {
			margin: 0 0 1rem 0;
			padding-left: 1.2rem;
		}
		.about-container :global(li) {
			margin-bottom: 0.5rem;
		}
		.about-container :global(p) {
			margin-bottom: 1rem;
		}
		.about-container :global(a) {
			color: rgb(var(--accent));
			text-decoration: none;
		}
		.about-container :global(a:hover) {
			text-decoration: underline;
		}
		.about-container :global(strong) {
			font-weight: 600;
		}
	</style>
</Layout>
